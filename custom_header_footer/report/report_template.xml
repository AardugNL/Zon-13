<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_footer" name="Custom Footer">
        <div class="footer" style="margin-left:-15px;margin-right:-15px;">
            <img t-if="company.footer_blank_image" t-att-src="'data:image/png;base64,%s' % to_text(company.footer_blank_image)" style="max-height: 235px;width:100%;"/>
        </div>
    </template>
    <template id="custom_header" name="Custom Header">
        <div class="header" style="margin-left:-15px;margin-right:-15px;">
            <img t-if="company.header_image" t-att-src="'data:image/png;base64,%s' % to_text(company.header_image)" style="max-height:150px;width:100%;"/>
        </div>
    </template>

    <template id="web.external_layout">
    <!-- Multicompany -->
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <t t-esc="company.update_scss()"/>
        <t t-if="not company.for_all_report">
            <t t-if="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}"><t t-raw="0"/></t>
            <t t-else="else" t-call="web.external_layout_standard"><t t-raw="0"/></t>
        </t>
        <t t-if="company.for_all_report">
            <t t-call="custom_header_footer.custom_header" />
            <div class="article o_report_layout_standard"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>
            </div>
            <t t-call="custom_header_footer.custom_footer" />
        </t>
    </template>
</odoo>